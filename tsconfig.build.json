// tsconfig.build.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src", // only compile code from src
    "noEmit": false // ensure output happens
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
